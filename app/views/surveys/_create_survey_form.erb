<form action="/users/<%= @user.id %>/surveys/create" method="post">
  <input name="survey[title]" type="text" placeholder="survey title" autofocus>

  <% (1..4).each do |num| %>
  <input name="questions[question_<%= num%>][question]" type="text">
    <% (1..4).each do |choice_num| %>
      <input name="choice_<%= choice_num %>" type="text">
    <% end %>
  <% end %>

  <input type="submit" value="submit">
</form>
